<MainMenuWindow>:
    name:"main menu"

    FloatLayout:
        Image:
            source: 'PerioLogo.png'
            size_hint: None, None
            pos_hint: {"center_x": .5, "y":.55}
            size_hint: .6, .6

        Button:
            id: "upload_test_button"
            text: "Upload Test"
            font_size: 16
            bold: True
            background_color: (0/255, 239/255, 255/255)
            pos_hint: {'center_x': .5,'y': .25}
